<form action="/posts" method="post">
  <h1>Create your blog post</h1>
  <label for="post_name">Blog post name</label>
  <input type="text" name="name" id="post_name">
  <label for="post_content">Blog post content</label>
  <input type="text" name="content" id="post_content">
  <input type="submit" value="submit">
</form>
