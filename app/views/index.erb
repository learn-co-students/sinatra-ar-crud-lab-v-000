<h1>Welcome to Blogger Site</h1>
<form method="get" action="/posts/new">
  <input type="submit" value="New Post">
</form>
<br>
<div style="width:100%;height:2px;background-color:black;"></div>
<% @posts.each_with_index do |post,index| %>
  <% if index.modulo(2) == 1 %>
      <h2 style="background-color:beige;"><a href="posts/<%=post.id%>"><%=post.name%></a></h2>
  <% else %>
      <h2 style="background-color:azure;"><a href="posts/<%=post.id%>"><%=post.name%></a></h2>
  <% end %>
  <p><%=post.content%><p>
<% end %>
