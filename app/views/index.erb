<!-- That view should use erb to iterate over @posts and render them on the page -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Index</title>
  </head>
  <body>
    <h1>Posts</h1>

    <div> <% @posts.each do |post| %> </div>
      <p>Title: <%= post.name %></p>
      <p>Content: <%= post.content %></p>
    <div> <% end %> </div>


  </body>
</html>
