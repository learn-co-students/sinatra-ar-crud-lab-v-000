<form action="/articles/<%= @article.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="article_title">New Title: </label>
    <input type="text" name="title" id="article_title", value="<%= @article.title %>">
    <label for="article_content">New Content: </label>
    <textarea name="content" id="article_content" cols="30" rows="10"><%= @article.content %></textarea>
    <input type="submit" value="submit">
</form>
