<form action= "/posts"
      method= "post">

      <div class="field">
        <label for= "post_name">Name:</label>
        <input type="text"
               name="name"
               placeholder="Post Name"/><br>
      </div>

      <div class="field">
        <label for= "post_content">Content:</label>
        <input type="text"
               name="content"
               placeholder="Content"/><br>
      </div>

      <input type="submit" value="submit">

</form>
