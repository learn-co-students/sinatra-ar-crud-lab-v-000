<h2>Edit Post </h2>

<form class="ui form"
      action= "/posts/<%=@post.id %>"
      method= "post">

      <input  id="hidden"
              type="hidden"
              name="_method"
              value="patch">
      Post Name:
      <input  type="text"
              name="name"
              value="<%=@post.name%>">
      Post Content:
      <input  type="text"
              name="content"
              value="<%=@post.content%>">

      <input type= "submit"
             value="submit">

</form>
