<%require 'pry'%>
<html>
  <body>
    <h3> <%= @post.name %> </h3>
    <p> <%= @post.content %> </p>

    <form method = "POST" action = '/posts/<%=@post.id%>'>
      <input id = 'hidden' type = 'hidden' name = '_method' value = 'patch'>
      <h3> New Blog Post Name: <input id = 'name' type = 'text' name = 'name' value = '<%=@post.name%>'> </h3>
      <p> New Blog Post Content: <input id = 'content' type = 'text' name = 'content' value = '<%=@post.content%>'> </p>
      <input type = 'submit' value = 'submit'>
    </form>
  </body>
</html>
