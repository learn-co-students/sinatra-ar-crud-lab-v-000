<link rel="stylesheet" href="/stylesheets/style.css">

<form class="" action="/posts/<%=@post.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="title" style="display:block">Title:
    <input type="text" name="name" id="title" value="<%=@post.name%>">
  </label>
  <label for="content" style="display:block">Content:
    <input type="text" name="content" id="content" value="<%=@post.content%>">
  </label>
  <input type="submit" value="submit">
</form>
