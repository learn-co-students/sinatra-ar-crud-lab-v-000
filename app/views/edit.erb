 <!DOCTYPE html>
 <html>
 
  <h2><%= @post.name %></h2>
  <p><%= @post.content %></p>
  
  
  <form action='/posts/<%= @post.id %>' method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Name: <input type="text" name="name"></p>
    <p>Content: <input type="textarea" name="content"></p>
    <input type="submit" id="submit">
    
    
  </form>
  
</html>