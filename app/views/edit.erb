<% if @post != nil %>
  <form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Title: <input type="text" name="post[name]" id="name" value="<%= @post.name %>"></p>
    <p>Content: <input type="text" name="post[content]" id="content" value="<%= @post.content %>"></p>
    <input type="submit" id="submit">
  </form>
<% else %>
  <h2>Invalid post id</h2>
<% end %>
