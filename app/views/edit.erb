<!DOCTYPE html>

<body>

  <form action="/posts/<%= @post.id %>"  method="post">
      <input id="hidden" type="hidden" name="_method" value="patch">
      Title: <input type="text" name="name" value="<%= @post.name %>"><br>
      Body: <input type="text" name="content" value="<%= @post.content %>"><br>
      <input type="submit" value="submit">
  </form>

</body>
