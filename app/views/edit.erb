<form action = "/posts/<%=@post.id %>" method = "post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Post Name: <input id="name" type="text" name="<%=@post.name%>"></p>
  <p>Post Content: <input id="content" type="text" name="<%=@post.content%>"></p><br>
  <input type="submit" value="submit">
</form>
