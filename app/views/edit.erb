<form method='post' action='/posts/<%= @post.id %>' id='edit'>
  <input id='hidden' type='hidden' name='_method' value='patch'/>
  <label for='name'>Name:</label><br>
    <input type='text' name='name' id='name' value='<%= @post.name %>'/><br><br>
  <label for='content'>Content:</label><br>
    <textarea name='content' form='edit' cols='40' rows='5'><%= @post.content %></textarea><br>
  <input type='submit' value='submit'/>
</form>
