<h1>Update Post</h1>

<form action="/posts/<%= @post.id %>" method="post">

  <input id="hidden" type="hidden" name="_method" value="patch">
  <p> Update Title: </p><input type="text" name="name" value ="<%= @post.name %>">
  <p> Update Content: </p><input type="text" name="content" value ="<%= @post.content %>">
  <input type="submit" id="submit">
</form>
