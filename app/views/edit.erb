<h1>Edit Post</h1>
<form method="post" action="/posts/<%=@post.id%>">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<h3>Title: <textarea name="name" value="<%=@post.name%>"></textarea></h3>
	<h3>Content: <textarea name="content" value="<%=@post.content%>"></textarea></h3>
	<input type="submit" value="submit">
</form>