<form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Update your name: <input type="text" name="name", value="<%= @post.name %>"><br>
    Update your content: <input type="text" name="content", value="<%= @post.content %>"><br>
    <input type="submit" value="submit">
</form>
