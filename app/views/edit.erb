<h1>Edit a blog post:</h2>
  <form action="/posts/<%= @post.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Name:<input type="text" name="name" value="<%= @post.name %>"></p>
    <p>Content:<textarea name="content" value="<%= @post.content %>"></p>
      <input type="submit" value="submit">
  </form>
