<h1><%= @post.name%></h1>
<p><%= @post.content%></p>
<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Edit Title:</label><input type="text" name="name" id="name">
  <label for="content">Edit Content: </label><input type="text" name="content" id="content">
  <input type="submit" name="submit" id="submit">
</form>
