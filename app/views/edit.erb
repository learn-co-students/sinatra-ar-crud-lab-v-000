<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type= "hidden" name= "_method" value="patch">
  <h2> Update Information About Post Here</h2>
  <p><h3><label for="name">Post Name:</label>
  <input type="text" id="name" name="name" value="<%= @post.name %>"></p><br>
  <label for="content">Post Content:</label>
  <input type="text" id="content" name="content" value="<%= @post.content %>"><br>
  <p><input type="submit" id="submit" value="submit"></h3></p>
</form>
