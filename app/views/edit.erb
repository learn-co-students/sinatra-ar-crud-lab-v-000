<form action="/articles/<%=@article.id%>" method="post">
  <p><label for="title">Title: </label><input type="text" name="title" id="title" value="<%=@article.title%>"></p>
  <p><label for="content">Content: </label><input type="text" name="content" id="content" value="<%=@article.content%>"></p>
  <p><input type="submit" name="submit" value="Submit"></p>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
</form>
