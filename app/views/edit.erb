<form class="" action="/articles/<%=@article.id%>" method="post">
  <!-- Form is getting confused because /"id" isn't @article.id according to inputed params -->
  <!-- so erb tags are needed -->
  <h1> <%= @article.title %> </h1>
  <h1> <%= @article.content %> </h1>
  <h1> <%= @article.id %> </h1>
  <!-- Reminder: Remember to add the use Rack::MethodOverride to your config.ru file -->
  <!-- one action per form -->
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="title" value="title"> <!-- params stuff given to post -->
  <input type="text" name="content" value="content">
  <!-- params[:title] -->
  <input type="submit" name="submit" id="submit" value="submit">

</form>
