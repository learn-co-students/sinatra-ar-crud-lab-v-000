<h1>Edit yo article!</h1>
<form action="/articles/<%=@article.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="title">Title: </label><input type="text" id="title" name="title" value="<%=@article.title%>">
  <label for="content">Content: </label><input type="text" id="content" name="content" value="<%=@article.content%>">
  <input type="submit" id="submit">
</form>