<p><%= @post.name %></p>
<p><%= @post.content %></p>

<form action="/posts/<%= @post.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Post Name: <input type="text" name="name"></p>
  <p>Post Content: <textarea rows="4" cols="100" name="content"></textarea></p>
  <p><input type="submit" value="submit">
</form>
