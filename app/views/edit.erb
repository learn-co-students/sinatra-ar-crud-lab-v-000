<form method="post" action="/posts/<%=@post.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Title: <input type="text" name="name" value="<%=@post.name%>"></p>
  <p>Content:</p>
  <p><textarea rows="8" cols="80" type="text" name="content"> <%= @post.content %>" </textarea> </p>
  <input type="submit" value="submit">
</form>

