<html>
  <head>
    <title>Active Record CRUD: Edit</title>
  </head>
  <body>
    <h1>Edit a Post</h1>
    <form action='/posts/<%= @post.id %>' method='post'>
      <input id='hidden' type='hidden' name='_method' value='patch'>
      <p><label>Post Name: </label><input type='text' id='name' name='posts[name]' value='<%= @post.name %>'></p>
      <p><label>Post Content: </label><br /><textarea id='content' name='posts[content]'><%= @post.content %></textarea></p>
    <input type='submit' id='submit' name='sumbit'>  
    </form>
  </body>
</html>
