<form action="/posts/<%= @post.id%>" method="post">
	<label for="name">Post Name: </label><input type="text" name="name" id="name" value="<%= @post.name %>"><br>
	<label for="content">Post Content: </label><input type="text" name="content" id="content" value="<%= @post.content %>"><br>
	<input type="hidden" name="_method" id="hidden" value="patch">
	<input type="submit" value="Submit" id="submit">
</form>