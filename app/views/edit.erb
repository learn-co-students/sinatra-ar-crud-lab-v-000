<h2>Edit a Post</h2>
   <form action='/posts/<%= @post.id %>' method='post'>
     <input id='hidden' type='hidden' name='_method' value='patch'>
     <p><label>Post Name: </label><input type='text' id='name' name='post[name]' value='<%= @post.name %>'></p>
     <p><label>Post Content: </label>
       <br> <textarea id='content' name='post[content]'>
       <%= @post.content %></textarea></p>
    <input type="submit" value="submit">
   </form>
