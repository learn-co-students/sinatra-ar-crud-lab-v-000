<form action="/posts/<%= @post.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Update Post Name: <input type="text" name="name" value="<%= @post.name %>"></p>
    <p>Update Post Content: <input type="text" name="content" value="<%= @post.content %>"></p>

    <input type="submit" id="submit">
</form>