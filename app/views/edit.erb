<form action="/posts/<%= @post_to_update.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Current Name: <%= @post_to_update.name %></p>
  <p>Current Content: <%= @post_to_update.content %></p>
  <p>New Post Name: <input type="text" name="name"></p>
  <p>New Content: <input type="text" name="content"></p>
  <input type="submit" value="submit">
</form>
