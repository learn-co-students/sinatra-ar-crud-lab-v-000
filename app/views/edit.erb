<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Title: <input type="text" name="name" value="<%= @post.name %>" id="name"></p>
  <p>Content: <input type="text" name="content" value="<%= @post.content %>" id="content"></p>
  <p><input type="submit" id="submit"></p>
</form>
