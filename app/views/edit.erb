<form method="post" action="/posts/<%= @post.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h1>Post Title: <input type="text" name="name" value="<%=@post.name%>"></h1>
  <p>Post Content: <input type="text" name="content" value="<%=@post.content%>"></p>
  <input type="submit" value="submit">
</form>
