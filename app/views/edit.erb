1.<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Update a Post</title>
  </head>
  <body>
    <h1>Update Your Post</h1>
    <form action="/posts/<%= @post.id %>" method="post">
      <input id="hidden" type="hidden" name="_method" value="patch">
      Post Title<br>
      <input id="post_name" type="text" name="name" value="<%= @post.name %>"><br>
      Content<br>
      <input id="post_content" type="text" name="content" value="<%= @post.content%>" ><br>
      <input type="submit" name="submit" value="submit">
    </form>
  </body>
</html>
