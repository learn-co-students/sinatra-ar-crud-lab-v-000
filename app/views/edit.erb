<h1>Current Post</h1>
<%= @post.name %>
<%= @post.content %>

<h2>Update Here</h2>
<form action="/posts/<%=@post.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Blog Name: <input type="text" name="name">
    Content: <input type="text" name="content">
    <input type="submit" value="submit">
</form>
