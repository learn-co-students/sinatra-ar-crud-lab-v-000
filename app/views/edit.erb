<form method="POST" action="/posts/<%= @post.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="post_title">Post Name:</label>
  <input id="post_title" type="text" name="name" value="<%= @post.name %>">

  <label for="post_body">Post Content:</label>
  <textarea id="post_body" type="text" name="content"><%= @post.content %></textarea>

  <input type="submit" value="submit">
</form>