<form action="/posts/<%=@post.id%>" method="post">
  <input id="hidden" type="hidden" method="_method" value="patch">
  Name: <input type="text" value="<%=@post.name%>" name="name">
  Content: <input type="text" value="<%=@post.content%>" name="content">
  <input type="submit" id="submit">  
</form>