<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Post</title>
  </head>
  <body>
    <form class="" action="/posts/<%= @post.id %>" method="post">
      <p><label for="name">Post Name: </label>
      <input type="text" name="name" value="<%= @post.name %>"></p>
      <p><label for="content">Post Content: </label>
      <input type="text" name="content" value="<%= @post.content %>"></p>
      <input type="submit" id="submit">
      <input id="hidden" type="hidden" name="_method" value="patch">
    </form>
  </body>
</html>
