<body>
  <h1>Edit form</h1>
  <form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch"> 
    <input type="text" id="name" name="name" value="<%= @post.name %>"><br><br>
    <textarea rows="10" cols="50" id="content" name="content" ><%= @post.content %></textarea><br>
    <input type="submit" value="submit">
  </form>
</body>
</html>