<h1>Edit your blog post</h1>
<form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <h2><label for="post_name">Post name</label></h2>
    <input type="text" id="post_name" name="name" value="<%= @post.name %>">
    <h2><label for="post_content">Post content</label></h2>
    <input type="text" id="post_content" name="content" value="<%= @post.content %>">
    <input type="submit" value="submit">
</form>
