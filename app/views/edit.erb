<form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p><label for="name"> Update Post Name:</label>
    <input type="text" id="name" name="post[name]" value="<%= @post.name %>"><br>
    <p><label for="content"> Update Content:</label>
    <input type="text" id="content" name="post[content]" value="<%= @post.content %>"><br>
    <p><input type="submit" value="submit"></p>
</form>
