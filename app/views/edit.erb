<form action="/posts/<%= @post_to_update.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  Update Blog Name: <input type="text" name="name" value="<%= @post_to_update.name %>">
  Update Blog Content: <input type="text" name="content" value="<%= @post_to_update.content %>">

  <input type="submit" value="submit">
</form>
