<h1>Edit Your Blog Post</h2>
<h3><%= @post.name %></h3>
<p><%= @post.content %></p>
<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h3>Name: <input type="text" name="name"></p>
  <h3>Content: <input type="text" name="content"></p><br>
  <input type="submit" value="submit">
</form>
