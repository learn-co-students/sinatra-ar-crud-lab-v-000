<form action="/posts/<%=@post.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name </label><input type="text" value="<%=@post.name%>" name="name"><br>
  <label>Contents </label><input type="text" value="<%=@post.content%>" name="content">
  <input type="submit" value="submit">
</form>
