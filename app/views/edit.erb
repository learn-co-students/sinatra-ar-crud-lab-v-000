<fieldset>
  <legend>Edit Post</legend>
  <form method="post" action="/posts/<%= @post.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch" />
    <em>Blog Name: </em><input id="name" type="text" name="name" value="<%= @post.name %>" />
    <em>Blog Content: </em><input id="content" type="text" name="content" value="<%= @post.content %>" />
    <input type="submit" value="submit" />
  </form>
</fieldset>
