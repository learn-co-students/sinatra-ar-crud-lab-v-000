<form class="" action="/articles/<%= @article.id %>" method="POST">
  <h1>Edit Article</h1>
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <p>
    <label for="title">Title: </label><input type="text" id="title" name="title" value="<%= @article.title %>">
  </p>
  <p>
    <label for="content">Content: </label>
    <textarea id="content" name="content" rows="8" cols="20"><%= @article.content %></textarea>
  </p>

  <input type="submit" id="submit" value="Update">
</form>
