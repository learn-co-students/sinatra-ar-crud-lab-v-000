


<form method="post" action="/posts/<%=@post.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Blog Post Title: <input type="text" value="<%=@post.name%>" name="name">
  Blog Post Content: <input type="text" value="<%=@post.content%>" name="content">
  <input type="submit" value="submit">
</form>



