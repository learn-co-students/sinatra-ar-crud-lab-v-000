<form action="/posts/<%=@post.id%>"
  method="post">
  <input id="hidden"
         type="hidden"
        name="_method"
        value="patch">
<p>name<input type="text"
              value="<%= @post.name %>"
              name="name"></p>
<p>content<input type="text"
                 value="<%= @post.content%>"
                name="content"></p>
<button type="submit" value="submit">submit</button>
</form>
