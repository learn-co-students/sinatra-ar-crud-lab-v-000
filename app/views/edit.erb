<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Post Name: <input type="text" value="<%= @post.name %>" name="name"></h2>
  <h2>Post Content: <input type="text" value="<%= @post.content %>" name="content"></h2>
  <h2><input type="submit" value="submit"></h2>
</form>
