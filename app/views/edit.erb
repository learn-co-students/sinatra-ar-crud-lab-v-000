<h1>Update Post</h1>


<form action="/posts/<%= @post.id %>" method="post">

<input id="hidden" type="hidden" name="_method" value="patch">
  <p>Title: </p><input type="text" name="name" value="<%= @post.name %>"><br>
  <p>Content: </p><input type="text" name="content" value="<%= @post.content %>">
  <br>

<input type="submit" id="submit" value="submit">


</form>
