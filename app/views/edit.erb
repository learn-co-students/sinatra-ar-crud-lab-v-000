<h1>Update your desired fields</h1>
<form action="/posts/<%= @post.id %>" method="post">
	<input id="hidden" type="hidden" name="_method" value="patch">
	
	<p>Name: <input type="text" name="name" value="<%= @post.name %>" ></p>
	
	<p>Content: </p><textarea name="content" id="" cols="30" rows="10"><%= @post.content %></textarea><br><br>
	
	<input type="submit" value="submit">
</form>