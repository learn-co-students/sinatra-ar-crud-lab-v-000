<form action="/posts/<%= @post.id %>" method="post">
     <input id="hidden" type="hidden" name="_method" value="patch">
     <h2><%= @post.name %></h2>
     <p>Edit Name: <input type="text" name="name"></p>
     <h2><%= @post.content %></h2>
     <p>Edit Content: <input type="text" name="content"></p>
     <input type="submit" value="submit">
</form>
