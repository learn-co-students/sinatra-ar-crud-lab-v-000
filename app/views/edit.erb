<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Blog Post Name: </label><input id="name" type="text" name="name" value="<%= @post.name %>">
  <label for="content">Blog Post Content: </label><input id="content" type="text" name="content" value="<%= @post.content %>">
  <input type="submit" id="submit" name="submit" value="Submit">Update</input>
</form>
