<form method="post" action='/posts/<%=@post.id%>'>
   <input id="hidden" type="hidden" name="_method" value="patch">
   <label for="title">Title:<input id="title" value="<%=@post.name%>" name="name" type="text"></label>
   <label for="blog">Blog Post:<input id="blog" value="<%=@post.content%>" name="content" type="text"></label>
   <br>
   <input type="submit" value="submit">
</form>