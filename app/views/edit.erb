<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="name" value="<%= @post.name %>" placeholder="Update your title here:">
  <br>
  <input type="text" name="content" value="<%= @post.content %>" placeholder="Update your blog post here:"></input>
  <br>
  <input type="submit" id="submit" value="Submit">
</form>
