<h1>Edit Post</h1>

<form method="POST" action"/posts/<%= @post.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input Name: type="text" id="post1_name" name="name" value="<%= @post.name %>">
  <input Content: type="text" id="post1_content" name="content" value="<%=@post.content%>">
  <input type="submit" value="submit">
</form>
