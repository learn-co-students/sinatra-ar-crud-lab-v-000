<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h3>Name: <input type="text" value="<%= @post.name %>" name="name"></h3>
  <h3>Content:</h3>
  <p><input type="text" value="<%= @post.content %>" name="content"></p>
  <input type="submit" value="submit">
</form>
