<h1>Update <%= @article.title %>:</h1>

<form method="POST" action=<%= "/articles/#{@article.id}"%>>
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <label for="title">Title:</label>
    <input type="text" id="title" name="article[title]" value=<%=@article.title%>><br>
    <label for="content">Content:</label>
    <input type="text" id="content" name="article[content]" value=<%=@article.content%>><br>
    <input type="submit" id="submit" value="Update Article">
</form>