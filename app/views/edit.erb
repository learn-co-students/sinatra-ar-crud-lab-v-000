<h2><%= @post.name %></h2>
<p><%= @post.content %></p>

<form method='POST' action='/posts/<%= @post.id %>'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  Edit Post Name: <input type="text" name="name">
  Edit Post Content: <input type="text" name="content">
  <input type="submit" value="submit">
</form>
