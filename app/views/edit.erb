<h1>Editing '<%= @post.name %>' </h1>

<p>Original Post Content: <%= @post.content %> </p>

<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <input type="text" name="name" placeholder="new post title">
  <input type="text" name="content" placeholder="new post content">

  <input type="submit" value="submit">
</form>
