<form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="post_name">Title: </label><input type="text" name="name" value='<%=@post.name%>'>
    <label for="post_content">Content: </label><input type="text" name="content" value='<%=@post.content%>'>
    <input type="submit" name="submit" value="submit">
</form>
