<p><%= @post.name %></p>
<p><%= @post.content %></p>

<form method="post" action="/posts/<%= @post.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type="text" name="name">
  Content: <input type="text" name="content">
  <input type="submit" id="submit">
</form>