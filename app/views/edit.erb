
<form action="/posts/<%= @post.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <h3><%= @post.name %>Name: <input type="text" name="name" id="name"></h3>
    <h3><%= @post.content %>Content: <input type="text" name="content" id="content"></h3>
    <input type="submit" value="submit">
</form>
