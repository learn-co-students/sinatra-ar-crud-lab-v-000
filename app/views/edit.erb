<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <%= @post.name %>
  <%= @post.content %>
  <input type = "text" id = "post_name" name = "name">
  <input type = "text" id = "post_content" name = "content">
  <input id = "submit" type = "submit">
</form>
