<p><%= @post.name %></p>
<p><%= @post.content %></p>

<form action='/posts/<%= @post.id %>' method="post">
  <label>Name: </label>
    <input name="name" value="<%= @post.name %>"/>
  
  <label>Content: </label>
    <input name="content" value="<%= @post.content %>"/>
  <input id="hidden" type="hidden" name="_method" value="patch"/>
  <input type="submit" value="submit"/>
</form> 