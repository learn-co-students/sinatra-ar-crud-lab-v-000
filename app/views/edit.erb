 <form action="/posts/<%=@post.id%>" method="post">
     <input id="hidden" type="hidden" name="_method" value="patch">
     <h1><%= @post.name %></h1>
     <p><%= @post.content %></p>
     <p>Name: <input id="name" type="text" name="edit_post[name]"</p>
     <p>Content: <input id="content" type="text" name="edit_post[content]"</p>
     <input type="submit" value="submit">
  </form>
