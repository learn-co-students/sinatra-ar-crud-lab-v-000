<h3>Edit Post ID No. <%= @post.id%> </h3>
<h2><%= @post.name%></h2>
<h2><%= @post.content%></h2>

<form method="POST" action="/posts/<%= @post.id%>">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<h3>Rename the Post: <input type="text" name="name"></h3>
	<h3>Change the Content: <input type="text" name="content"></h3>
	<input type="submit" id="submit">
</form>
