<form action="/posts/<%=@post.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Name</h2>
  <input type="text" name="name" value="<%=@post.name%>" id="name"><br>
  <h2>Content</h2>
  <textarea name="content" rows="8" cols="80" value="<%=@post.content%>" id="content"></textarea>
  <input type="submit" id="submit">
</form>
