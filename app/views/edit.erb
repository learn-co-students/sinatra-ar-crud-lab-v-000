<form method="POST" action="/posts/<%= @post.id %>">
  <p> <%= @post.name %> </p>
  <p> <%= @post.content %> </p>

  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" name="name"></p>
  <p>Content: <input type="text" name="content"></p>
  <input type="submit" value="submit">
</form>
