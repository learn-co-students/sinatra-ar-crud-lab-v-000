<h2>Edit page</h2>
<form action="/posts/<%= @post.id %>" 
      method="POST">
  <input id="hidden" 
         type="hidden" 
         name="_method" 
         value="patch">
  Name:<input type="text" 
              value="<%= @post.name %>" 
              name="name">
  Content:<input type="text" 
                 value="<%= @post.content %>" 
                 name="content">
  <button type="submit">Submit</button>
</form>
