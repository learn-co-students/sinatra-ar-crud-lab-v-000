<form action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <h1><%= @post.name %></h1>
  <p><label for="name"><em>Edit post name: </em></label><input type="text" name="name"></p>
  <p><%= @post.content %></p>
  <p><label for="content"><em>Edit post content: </em></label><input type="text" name="content"></p>
  <p><input type="submit" value="submit"></p>
</form>
