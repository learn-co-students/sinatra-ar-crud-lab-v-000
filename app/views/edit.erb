<h1>Edit Post</h1>
<form method='POST' action="/posts/<%= @the_post.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Title: <input type='text' name='name' value='<%= @the_post.name%>'><br><br>
  Content: <input type='text' name='content' value='<%= @the_post.content%>'>
  <input type='submit' value='submit'>
</form>