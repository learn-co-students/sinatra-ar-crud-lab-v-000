<h1><%= @article.title %> </h1>
<p><%= @article.content %></p>

<form method="post" action="/articles/<%=@article.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Title:<input type="text" name="title"></label>
  <label>Content:<input type="text" name="content"></label>
  <input type="submit">
</form>
