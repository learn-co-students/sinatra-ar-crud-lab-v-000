<html>
  <head>
    <meta charset="UTF-8">
    <title>Edit</title>
  </head>
  <body>
    <form action="/posts/<%= @post.id %>" method="post">
      <input id="hidden" type="hidden" name="_method" value="patch">
      <h2><%= @post.name %></h2>
      <h3>Edit Name: <input type="text" name="name"></h3><br>
      <h2><%= @post.content %></h2>
      <h3>Edit Content: <input type="text" name="content"></h3>

      <input type="submit" value="submit">
    </form>
  </body>
</html>
