
<h1>Edit Your Blog Post</h1>

<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><label>Post Title: <input type="text" name="name" value="<%= @post.name %>"></label></p>
  <p><label>Edit Your Post Here: <textarea name="content" cols="40" rows="5"><%= @post.content %></textarea></label></p>
  <p><button type="submit" value="submit">Submit</button>
</form>
