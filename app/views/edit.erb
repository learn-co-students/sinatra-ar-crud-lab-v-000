<form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Post Name:<input type="text" value="<%= @post.name %>" name="name"></p>
    <p>Post Contents:<input type="text" value="<%= @post.content %>" name="content"></p>
    <input type="submit" value="submit">
</form>
