<form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Post Current Name: <%= @post.name %>, Update: <input type="text" name="name"></p>
 	<p>Post Current Content: <%= @post.content %>, Update: <input type="text" name="content"></p>
 	<input type="submit" value="submit">
</form>
