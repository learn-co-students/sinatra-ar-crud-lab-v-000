<form action="/articles/<%= @article.id %>" method="POST">
  <h1>Selected Article</h1>
  <div class="article">
    <h2><%= @article.title %></h2>
    <p><%= @article.content %></p>
  </div>
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Article">
</form>