<div class="blog-post">
  <h2 class="blog-post-title"><%= "#{@post.name}" %></h2>

  <p><%= "#{@post.content}" %></p>

  <div class="row">
    <div class="col-xs-6">
      <a href="/posts/<%= @post.id %>/edit">Edit</a>
    </div>
    <div class="col-xs-6">
      <form method="post" action="/posts/<%= @post.id %>/delete">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input class="offset-xs-1 col-xs-4" type="submit" value="delete">
      </form>
    </div>
  </div>
</div><!-- /.blog-post -->

<nav>
  <ul class="pager">
    <li><a href="#">Older</a></li>
    <li class="disabled"><a href="#">Newer</a></li>
  </ul>
</nav>
