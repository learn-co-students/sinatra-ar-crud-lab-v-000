<html>
  <head>
    <title>Active Record CRUD: Index</title>
  </head>
  <body>
    <h1>Post <%= @post.id %></h1>
      <h2><%= @post.name %></h2>
      <p><%= @post.content %></p>
      <hr />
      <form method='POST' action='/posts/<%= @post.id %>/delete'>
        <input type='hidden' id='hidden' name='_method' value='delete'> 
        <input type='submit' id='submit' value='delete'>
      </form>
  </body>
</html>
