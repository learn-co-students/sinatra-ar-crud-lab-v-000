<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= @post.name %> - Blog</title>
</head>

<body>
  <h1><%= @post.name %></h1>

  <p>
    <%= @post.content %>
  </p>

  <p><a href="<%="/posts/#{@post.id}/edit" %>">Edit</a></p>
  <p>
    <form action="<%= "/posts/#{@post.id}/delete" %>" method="post">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <input type="submit" id="submit" value="delete"/> 
    </form>
  </p>
</body>
</html>