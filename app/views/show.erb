<% if @post != nil %>
  <p><h1><%= @post.name %></h1></p>
  <%= @post.content %>
<% else %>
  <h2>Invalid post id</h2>
<% end %>
<form action="/posts/<%= @post.id %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" id="delete" value="Delete">
</form>
